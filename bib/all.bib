journal = {Reproduction},
volume = {129},
number = {2},
doi = {10.1530/rep.1.00360},
pmid = {15695608},
sciwheel-projects = {Epigenetics},
abstract = {Epigenetic processes affect three stages of germline development, namely (1) specification and formation of primordial germ cells and their germline derivatives through lineage-specific epigenetic modifications, in the same manner as other embryonic lineages are formed, (2) a largely genome-wide erasure and re-establishment of germline-specific epigenetic modifications that only occurs in the embryonic primordial germ cell lineage, followed by re-establishment of sex-specific patterns during gametogenesis, and (3) differential epigenetic modifications to the mature male and female gamete genomes shortly after fertilisation. This review will detail current knowledge of these three processes both at the genome-wide level and at specific imprinted loci. The consequences of epigenetic perturbation are discussed and new in vitro models which may allow further understanding of a difficult developmental period to study, especially in the human, are highlighted.}
}
@article{mccabe_2020,
