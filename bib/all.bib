@article{gontarz_2020,
title = {Comparison of differential accessibility analysis strategies for {ATAC}-seq data.},
author = {Gontarz, Paul and Fu, Shuhua and Xing, Xiaoyun and Liu, Shaopeng and Miao, Benpeng and Bazylianska, Viktoriia and Sharma, Akhil and Madden, Pamela and Cates, Kitra and Yoo, Andrew and Moszczynska, Anna and Wang, Ting and Zhang, Bo},
