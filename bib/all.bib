@article{fu_2018,
title = {Elimination of {PCR} duplicates in {RNA}-seq and small {RNA}-seq using unique molecular identifiers.},
author = {Fu, Yu and Wu, Pei-Hsuan and Beane, Timothy and Zamore, Phillip D and Weng, Zhiping},
