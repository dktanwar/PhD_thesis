@article{zuckerkandl_2007,
title = {Combinatorial epigenetics, "junk {DNA}", and the evolution of complex organisms.},
author = {Zuckerkandl, Emile and Cavalli, Giacomo},
pages = {232-242},
url = {http://dx.doi.org/10.1016/j.gene.2006.12.001},
year = {2007},
