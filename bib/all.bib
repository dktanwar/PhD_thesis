@article{belleanne_2013,
title = {{microRNA} signature is altered in both human epididymis and seminal microvesicles following vasectomy.},
author = {Belleannée, Clémence and Légaré, Christine and Calvo, Ezéquiel and Thimon, Véronique and Sullivan, Robert},
