@article{erkek_2013,
title = {Molecular determinants of nucleosome retention at {CpG}-rich sequences in mouse spermatozoa.},
author = {Erkek, Serap and Hisano, Mizue and Liang, Ching-Yeu and Gill, Mark and Murr, Rabih and Dieker, Jürgen and Schübeler, Dirk and van der Vlag, Johan and Stadler, Michael B and Peters, Antoine H F M},
