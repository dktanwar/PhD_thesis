@article{jung_2020,
title = {Transgenerational inheritance of {BPA}-induced obesity correlates with transmission of new {CTCF} sites in the Fto gene},
author = {Jung, Yoon Hee and Bixler, Brianna J and Ruiz, Daniel and Wang, Hsiao-Lin V and Linsenbaum, Hannah and Xiang, Jian-Feng and Shafik, Andrew M and Jin, Peng and Corces, Victor G},
