author = {Benz, Fabian and Roderburg, Christoph and Vargas Cardenas, David and Vucur, Mihael and Gautheron, Jérémie and Koch, Alexander and Zimmermann, Henning and Janssen, Jörn and Nieuwenhuijsen, Lukas and Luedde, Mark and Frey, Norbert and Tacke, Frank and Trautwein, Christian and Luedde, Tom},
pages = {e42},
url = {http://dx.doi.org/10.1038/emm.2013.81},
