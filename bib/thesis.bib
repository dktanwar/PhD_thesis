@article{martos_2015,
title = {Elusive inheritance: Transgenerational effects and epigenetic inheritance in human environmental disease.},
author = {Martos, Suzanne N and Tang, Wan-Yee and Wang, Zhibin},
pages = {44-54},
url = {http://dx.doi.org/10.1016/j.pbiomolbio.2015.02.011},
year = {2015},
