   doi = {10.1016/j.celrep.2016.09.050},
   issn = {22111247},
   issue = {3},
   journal = {Cell Reports},
   keywords = {ATF7IP,H3K9me3,HUSH complex,SETDB1,epigenetic silencing,heterochromatin,histone methylation,ubiquitin-mediated degradation},
