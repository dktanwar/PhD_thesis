   issn = {17568935},
   issue = {1},
   journal = {Epigenetics and Chromatin},
   keywords = {ATAC-seq,Gene networks,Gene regulation,Promoter coverage,RNA-seq,Tissue-specific genes},
   month = {2},
   pages = {16},
   pmid = {30795793},
   publisher = {BioMed Central Ltd.},
   title = {Combined analysis of dissimilar promoter accessibility and gene expression profiles identifies tissue-specific genes and actively repressed networks},
