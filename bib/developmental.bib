   month = {1},
   pages = {266-278},
   publisher = {Wiley},
   title = {Gdnf Upregulates c-Fos Transcription via the Ras/Erk1/2 Pathway to Promote Mouse Spermatogonial Stem Cell Proliferation},
   volume = {26},
   url = {/pmc/articles/PMC2905627/?report=abstract https://www.ncbi.nlm.nih.gov/pmc/articles/PMC2905627/},
