}
@article{st_2014,
title = {Paternal diet defines offspring chromatin state and intergenerational obesity.},
author = {Öst, Anita and Lempradl, Adelheid and Casas, Eduard and Weigert, Melanie and Tiko, Theodor and Deniz, Merdin and Pantano, Lorena and Boenisch, Ulrike and Itskov, Pavel M and Stoeckius, Marlon and Ruf, Marius and Rajewsky, Nikolaus and Reuter, Gunter and Iovino, Nicola and Ribeiro, Carlos and Alenius, Mattias and Heyne, Steffen and Vavouri, Tanya and Pospisilik, J Andrew},
pages = {1352-1364},
url = {http://dx.doi.org/10.1016/j.cell.2014.11.005},
year = {2014},
month = {dec},
day = {4},
urldate = {2022-02-20},
journal = {Cell},
volume = {159},
number = {6},
doi = {10.1016/j.cell.2014.11.005},
pmid = {25480298},
sciwheel-projects = {Thesis},
abstract = {The global rise in obesity has revitalized a search for genetic and epigenetic factors underlying the disease. We present a Drosophila model of paternal-diet-induced intergenerational metabolic reprogramming ({IGMR}) and identify genes required for its encoding in offspring. Intriguingly, we find that as little as 2 days of dietary intervention in fathers elicits obesity in offspring. Paternal sugar acts as a physiological suppressor of variegation, desilencing chromatin-state-defined domains in both mature sperm and in offspring embryos. We identify requirements for {H3K9}/K27me3-dependent reprogramming of metabolic genes in two distinct germline and zygotic windows. Critically, we find evidence that a similar system may regulate obesity susceptibility and phenotype variation in mice and humans. The findings provide insight into the mechanisms underlying intergenerational metabolic reprogramming and carry profound implications for our understanding of phenotypic variation and evolution. Copyright \copyright 2014 Elsevier Inc. All rights reserved.}
}
@article{ewing_1998,
title = {Base-calling of automated sequencer traces using phred. {II}. Error probabilities.},
author = {Ewing, B and Green, P},
pages = {186-194},
url = {https://www.ncbi.nlm.nih.gov/pubmed/9521922},
year = {1998},
