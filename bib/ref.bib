@article{wang_2017,
title = {Lamarck rises from his grave: parental environment-induced epigenetic inheritance in model organisms and humans.},
author = {Wang, Yan and Liu, Huijie and Sun, Zhongsheng},
pages = {2084-2111},
url = {http://dx.doi.org/10.1111/brv.12322},
year = {2017},
month = {nov},
