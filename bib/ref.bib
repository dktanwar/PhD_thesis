@article{toth_2015,
title = {Mechanisms of non-genetic inheritance and psychiatric disorders.},
author = {Toth, Miklos},
pages = {129-140},
url = {http://dx.doi.org/10.1038/npp.2014.127},
year = {2015},
month = {jan},
